// Job paramaters to set for this environment

params {
	max_memory = 250.GB
	max_cpus = 20
	max_time = 240.h
	maxMultiqcEmailFileSize = 25.MB
	fastq_screen_config = "/work_ifs/ikmb_repository/databases/FastQ_Screen_Genomes/fastq_screen_bwa.conf"
	filter_folder = "/work_ifs/ikmb_repository/databases/FastQ_Screen_Genomes"
	bloomfilter = "$filter_folder/Adapters/Contaminants.bf $filter_folder/Arabidopsis/Arabidopsis_thaliana.bf $filter_folder/Drosophila/Drosophila_melanogaster.bf $filter_folder/E_coli/Escherichia_coli.bf $filter_folder/Lambda/Lambda.bf $filter_folder/Mitochondria/Mitochondria.bf $filter_folder/Human/Human.bf $filter_folder/Mouse/Mouse.bf $filter_folder/PhiX/PhiX.bf $filter_folder/Rat/Rat.bf $filter_folder/rRNA/rRNA.bf $filter_folder/Vectors/Vectors.bf $filter_folder/Worm/Worm.bf $filter_folder/Yeast/Yeast.bf"
}

// Resource manager settings

executor {
  queueSize=100
}

// Process setting

process {
  
  executor = 'slurm'
  queue = 'htc'
 
}

singularity {
 enabled = true
 runOptions = "-B /work_ifs -B /mnt -B /scratch"
 cacheDir = "/work_ifs/ikmb_repository/singularity_cache"
}



